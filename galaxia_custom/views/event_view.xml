<openerp>
    <data>
        <record id="event_key_code_view_form" model="ir.ui.view" >
            <field name="name">event.key.code.form</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">
                <field name="organizer_id" position="after">
                    <field name="key_code" />
                </field>
                <page string="Event Details" position="after">
                    <page string="Invoice lines" groups="sale.group_analytic_accounting">
                        <separator string="Recurring invoice lines" />
                        <field name="recurring_invoice_line_ids" >
                            <tree string="Account Analytic Lines" editable="bottom">
                                <field name="product_id" on_change="product_id_change(product_id, uom_id, quantity, False, parent.partner_id, False, parent.pricelist_id, parent.company_id)"/>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="price_unit"/>
                                <field name="price_subtotal"/>
                            </tree>
                        </field>
                        <separator string="Recurring invoice incidences" />
                        <field name="recurring_invoice_incidence_ids" nolabel="1">
                            <tree string="Recurring invoice incidences" editable="top">
                                <field name="analytic_account_id" invisible="1"/>
                                <field name="from_date" required="1" />
                                <field name="to_date" required="1" />
                                <field name="name" required="1" />
                                <field name="price" required="1"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="event_key_code_view_tree" model="ir.ui.view" >
            <field name="name">event.key.code.tree</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="key_code" />
                    <field name="project_id" />
                </field>
            </field>
        </record>

        <record id="event_key_code_view_search" model="ir.ui.view" >
            <field name="name">event.key.code.search</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_search"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="project_id" />
                </field>
            </field>
        </record>
        
        <record id="event_project_kanban" model="ir.ui.view">
            <field name="name">event.project.kanban</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_kanban" />
            <field name="arch" type="xml">
                <xpath expr="//templates//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//templates//field[@name='name']" position="after">
                    <field name="project_id" />
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
