<openerp>
    <data>
        <record id="hr_contract_view_tree_inh_galaxia" model="ir.ui.view" >
            <field name="name">hr.contract.view.tree.inh.galaxia</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="after">
                    <field name="communication_seg_soc_code" />
                    <field name="communication_contract_code" />
                </field>
            </field>
        </record>
        <record id="hr_contract_view_search_inh_galaxia" model="ir.ui.view" >
            <field name="name">hr.contract.view.search.inh.galaxia</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_search"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="after">
                    <field name="communication_seg_soc_code" />
                    <field name="communication_contract_code" />
                </field>
            </field>
        </record>
        <record id="hr_contract_view_form_inh_galaxia" model="ir.ui.view" >
            <field name="name">hr.contract.view.form.inh.galaxia</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="after">
                    <field name="communication_seg_soc_code" />
                </field>
                <field name="type_id" position="after">
                    <field name="communication_contract_code" />
                </field>
            </field>
        </record>
        <record id="hr_contract_view_form_inh2_galaxia" model="ir.ui.view">
            <field name="name">hr.contract.view.form.inh2.galaxia</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract_history.hr_contract_view_form_inh_historical"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='historicals']//field[@name='date']" position="after">
                    <field name="hours" widget="float_time" required="1"/>
                    <field name="percentage" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
