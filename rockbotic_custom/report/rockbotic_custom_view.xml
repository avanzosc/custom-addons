<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="custom_backend_favicon" name="rockbotic_custom backend_favicon" inherit_id="web.layout">
            <xpath expr="//link[@rel='shortcut icon']" position="attributes">
                <attribute name="href">/rockbotic_custom/static/src/img/favicon.ico</attribute>
            </xpath>
        </template>

        <template id="rockbotic_layout_html" name="rockbotic_custom layout_html"
                  inherit_id="report.layout">
            <xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/rockbotic_custom/static/src/css/rockbotic.css" />
            </xpath>
        </template>

        <template id="rockbotic_layout" name="rockbotic_custom layout"
                  inherit_id="report.minimal_layout">
            <xpath expr="//head" position="inside">
                <link rel="stylesheet" href="/rockbotic_custom/static/src/css/rockbotic.css" />
            </xpath>
        </template>

        <record id="report.paperformat_euro" model="report.paperformat">
            <field name="margin_top">40</field>
            <field name="header_spacing">30</field>
            <field name="margin_bottom">20</field>
        </record>

    </data>
</openerp>
