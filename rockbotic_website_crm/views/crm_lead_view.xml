<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="crm_lead_enrollment_search_view" model="ir.ui.view">
            <field name="name">crm.enrollment.search</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <search string="Enrollments">
                    <field name="name" string="Student / Parent"
                           filter_domain="['|','|','|',('partner_name','ilike',self),('email_from','ilike',self),('contact_name','ilike',self),('name','ilike',self)]"/>
                    <field name="categ_ids" string="Tag" filter_domain="[('categ_ids', 'ilike', self)]"/>
                    <field name="section_id" groups="base.group_multi_salesteams"/>
                    <field name="user_id"/>
                    <field name="partner_id" operator="child_of"/>
                    <field name="create_date"/>
                    <field name="country_id"/>
                    <separator/>
                    <filter string="My Leads" domain="[('user_id','=',uid)]" help="Leads that are assigned to me"/>
                    <filter string="Unassigned" name="unassigned" domain="[('user_id','=', False)]" help="No salesperson"/>
                    <separator/>
                    <filter string="New Mail" name="message_unread" domain="[('message_unread','=',True)]"/>
                    <separator/>
                    <filter string="Available for mass mailing" name="not_opt_out" domain="[('opt_out', '=', False)]" help="Leads that did not ask not to be included in mass mailing campaigns"/>
                    <group expand="0" string="Group By">
                        <filter string="Salesperson" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Sales Team" domain="[]" context="{'group_by':'section_id'}" groups="base.group_multi_salesteams"/>
                        <filter string="Stage" domain="[]" context="{'group_by':'stage_id'}"/>
                        <filter string="Customer" help="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Campaign" domain="[]" context="{'group_by':'campaign_id'}"/>
                        <filter string="Source" domain="[]" context="{'group_by':'source_id'}"/>
                        <filter string="Channel" domain="[]" context="{'group_by':'medium_id'}"/>
                        <filter string="Creation Month" domain="[]" context="{'group_by':'create_date'}"/>
                        <filter string="Last Message" name="group_message_last_post" domain="[]" context="{'group_by':'message_last_post:week'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="crm_lead_enrollment_tree_view" model="ir.ui.view">
            <field name="name">crm.enrollment.tree</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <tree string="Enrollments" fonts="bold:message_unread==True" colors="grey:probability == 100">
                    <field name="date_deadline" invisible="1"/>
                    <field name="create_date"/>
                    <field name="contact_name"/>
                    <field name="partner_name"/>
                    <field name="country_id"/>
                    <field name="email_from"/>
                    <field name="phone"/>
                    <field name="stage_id"/>
                    <field name="user_id" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="section_id" groups="base.group_multi_salesteams"/>
                    <field name="probability" invisible="1"/>
                    <field name="campaign_id" invisible="1"/>
                    <field name="referred" invisible="1"/>
                    <field name="medium_id" invisible="1"/>
                    <field name="message_unread" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="crm_lead_enroll_action">
            <field name="name">Enrollments</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','enroll')]</field>
            <field name="view_id" ref="crm_lead_enrollment_tree_view"/>
            <field name="search_view_id"
                   ref="crm_lead_enrollment_search_view"/>
        </record>

        <menuitem name="Enrollments" id="crm_lead_enroll_menu"
                  parent="base.menu_sales"
                  sequence="4" action="crm_lead_enroll_action"/>

        <record id="crm_lead_extended_view_form" model="ir.ui.view">
            <field name="name">crm.lead.extended.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <button name="%(crm.action_crm_lead2opportunity_partner)d"
                        position="attributes">
                    <attribute name="invisible">True</attribute>
                </button>
                <button name="%(crm.action_crm_lead2opportunity_partner)d"
                        position="after">
                    <button name="button_convert2opportunity" string="Convert to Opportunity"
                            type="object" help="Convert to Opportunity"
                            class="oe_highlight"/>
                </button>
                <field name="partner_name" position="after">
                    <field name="vat" />
                </field>
                <field name="partner_id" position="before">
                    <field name="rockbotic_before" />
                </field>
                <field name="partner_id" position="attributes">
                    <attribute name="readonly">True</attribute>
                </field>
                <field name="partner_id" position="after">
                    <field name="parent_id" readonly="True" />
                </field>
                <field name="user_id" position="before">
                    <field name="school_id" widget="selection" />
                    <field name="event_id" widget="selection" />
                    <field name="account_number"/>
                </field>
                <xpath expr="//field[@name='contact_name']/.." position="after">
                    <field name="birth_date" />
                    <field name="course" />
                </xpath>
                <field name="opt_out" position="after">
                    <field name="journal_permission" />
                    <field name="blog_permission" />
                    <field name="media_permission" />
                </field>
            </field>
        </record>

    </data>
</openerp>
