<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>
    <record model="ir.ui.view" id="crm_claim_stage_close_form_view">
        <field name="name">crm.claim.stage.close.form</field>
        <field name="model">crm.claim.stage</field>
        <field name="inherit_id" ref="crm_claim.crm_claim_stage_form" />
        <field name="arch" type="xml">
             <field name="sequence" position="after">
                 <field name="closed_stage" />
             </field>
        </field>
    </record>

    <!-- Claims Menu -->
    <record model="ir.actions.act_window" id="crm_claim.crm_case_categ_claim0">
        <field name="domain">[('stage_id.closed_stage','=',False)]</field>
    </record>

    <record model="ir.actions.act_window" id="crm_closed_claim_action">
        <field name="name">Claims (closed)</field>
        <field name="res_model">crm.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="view_id" ref="crm_claim.crm_case_claims_tree_view"/>
        <field name="context">{"search_default_user_id":uid, "stage_type":'claim'}</field>
        <field name="domain">[('stage_id.closed_stage','=',True)]</field>
        <field name="search_view_id" ref="crm_claim.view_crm_case_claims_filter"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Record and track your customers' claims. Claims may be linked to a sales order or a lot.You can send emails with attachments and keep the full history for a claim (emails sent, intervention type and so on).Claims may automatically be linked to an email address using the mail gateway module.
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="crm_closed_claim_tree_action">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="crm_claim.crm_case_claims_tree_view"/>
        <field name="act_window_id" ref="crm_closed_claim_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="crm_closed_claim_calendar_action">
        <field name="sequence" eval="2"/>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="crm_claim.crm_case_claims_calendar_view"/>
        <field name="act_window_id" ref="crm_closed_claim_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="crm_closed_claim_form_action">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="crm_claim.crm_case_claims_form_view"/>
        <field name="act_window_id" ref="crm_closed_claim_action"/>
    </record>


    <menuitem name="Claims (closed)" id="menu_crm_closed_claims"
              parent="base.menu_aftersale" action="crm_closed_claim_action"
              sequence="1" />

</data>
</openerp>